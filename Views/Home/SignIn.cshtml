@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel


<div class="row">
  <div class="col-md-4 offset-md-4">
    <h2>Sign In</h2>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label" asp-for="Email"></label>
        <input  class="form-control" asp-for="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label" asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password">
        <span class="text-danger" asp-validation-for="Password"></span>
      </div>
      <div class="row">
        <div class="col-md-6">
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" asp-for="RememberMe">
          <label class="form-check-label" for="exampleCheck1" asp-for="RememberMe"></label>
        </div>
          </div>

        <div class="col-md-6">
          <a class="btn btn-outline-secondary btn-sm float-end"asp-controller="Home" asp-action="ForgetPassword">Forgot Password</a>
        </div>
      </div>
  
        
      
      <button type="submit" class="btn btn-primary">Sign In</button>
      
    </form>

  </div>

</div>