
@{
    ViewData["Title"] = "ChangePassword";
}

<h1>ChangePassword</h1>
@model PasswordChangeViewModel;
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Change Password</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>


        <form asp-controller="Members" asp-action="ChangePassword" method="post">

            <div class="row mb-3">
                <label for="CurrentPassword" class="col-md-4 col-form-label" asp-for="CurrentPassword"></label>
                <div class="col-md-8">
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="NewPassword" class="col-md-4 col-form-label" asp-for="NewPassword"></label>
                <div class="col-md-8">
                    <input asp-for="NewPassword" class="form-control" />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordConfirm" class="col-md-4 col-form-label" asp-for="NewPasswordConfirm"></label>
                <div class="col-md-8">
                    <input asp-for="NewPasswordConfirm" class="form-control" />
                    <span class="text-danger" asp-validation-for="NewPasswordConfirm"></span>
                </div>
            </div>


            <div class="row mb-3">

                <div class="col-md-8 offset-md-10">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </div>

        </form>
    </div>
</div>